{
  "compilerOptions": {
    /* Opciones base: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Rigurosidad */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // ...other options
    /* no requiere acceso a las API del DOM */
    "lib": ["es2022"],
    "noEmit": true,
    "module": "Preserve"
  }
}
